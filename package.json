{
  "name": "rain",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.rain.meditation",
    "productName": "Rain",
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "files": [
      "electron.js",
      "preload.js",
      "out/**/*",
      "node_modules/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "clsx": "^2.1.1",
    "edge-tts": "^1.0.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "next": "latest",
    "node-edge-tts": "^1.2.8",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "serve-handler": "^6.1.6",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "edgeone-pages-mcp": "^0.0.15",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "latest",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
